{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "activeMatchTeam": {
            "allOf": [
                {
                    "$ref": "defs/team.json#/team"
                },
                {
                    "properties": {
                        "score": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "score"
                    ]
                }
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "required": ["teamA", "teamB", "games", "match"],
    "properties": {
        "teamA": {
            "$ref": "#/definitions/activeMatchTeam"
        },
        "teamB": {
            "$ref": "#/definitions/activeMatchTeam"
        },
        "match": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "isCompleted": {
                    "type": "boolean"
                }
            },
            "required": ["name", "isCompleted"]
        },
        "games": {
            "type": "array",
            "additionalItems": false,
            "items": {
                "type": "object",
                "properties": {
                    "winner": {
                        "type": "string",
                        "enum": [
                            "none",
                            "alpha",
                            "bravo"
                        ]
                    },
                    "pickedBy": {
                        "type": "string",
                        "enum": [
                            "none",
                            "alpha",
                            "bravo"
                        ]
                    },
                    "map": {
                        "type": "string"
                    },
                    "teamAGoalCount": {
                        "type": "number"
                    },
                    "teamBGoalCount": {
                        "type": "number"
                    }
                },
                "required": [
                    "winner",
                    "map",
                    "teamAGoalCount",
                    "teamBGoalCount"
                ]
            }
        }
    },
    "default": {
        "teamA": {
            "id": "aaa111",
            "name": "Example team 1",
            "score": 0,
            "players": [
                { "id": "aaa1111", "name": "Player One", "minecraftName": "Player One" },
                { "id": "aaa1112", "name": "Player Two", "minecraftName": "Player Two" }
            ]
        },
        "teamB": {
            "id": "bbb222",
            "name": "Example team 2",
            "score": 0,
            "players": [
                { "id": "bbb2221", "name": "Player Three", "minecraftName": "Player Three" },
                { "id": "bbb2222", "name": "Player Four", "minecraftName": "Player Four" }
            ]
        },
        "match": {
            "name": "Round One",
            "isCompleted": false
        },
        "games": [
            {
                "winner": "none",
                "pickedBy": "alpha",
                "map": "Unknown",
                "teamAGoalCount": 0,
                "teamBGoalCount": 0
            },
            {
                "winner": "none",
                "pickedBy": "bravo",
                "map": "Unknown",
                "teamAGoalCount": 0,
                "teamBGoalCount": 0
            },
            {
                "winner": "none",
                "pickedBy": "none",
                "map": "Unknown",
                "teamAGoalCount": 0,
                "teamBGoalCount": 0
            }
        ]
    }
}
