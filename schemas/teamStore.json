{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "player": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "team": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "players"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "players": {
                    "type": "array",
                    "additionalItems": false,
                    "items": {
                        "$ref": "#/definitions/player"
                    }
                }
            }
        }
    },
    "type": "array",
    "additionalItems": false,
    "items": {
        "$ref": "#/definitions/team"
    },
    "default": [
        {
            "id": "aaa111",
            "name": "Example team 1",
            "players": [
                { "id": "aaa1111", "name": "Player One" },
                { "id": "aaa1112", "name": "Player Two" }
            ]
        },
        {
            "id": "bbb222",
            "name": "Example team 2",
            "players": [
                { "id": "bbb2221", "name": "Player Three" },
                { "id": "bbb2222", "name": "Player Four" }
            ]
        }
    ]
}
